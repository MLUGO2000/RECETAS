<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="30dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/esquinas_redondeadas"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="123dp"
            android:elevation="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_receta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/contorno_imagen"
                android:elevation="0dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <Space
            android:layout_width="15dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/id_rece"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contorno_imagen"
                android:elevation="3dp"
                android:text="TextView"
                android:textColor="@color/primaryText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/nombre_receta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contorno_imagen"
                android:elevation="3dp"
                android:text="Nombre"
                android:textColor="@color/primaryText"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/des_receta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contorno_imagen"
                android:elevation="3dp"
                android:text="Una breve descripccion del plato especifico que se mostrara"
                android:textColor="@color/primaryText" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>