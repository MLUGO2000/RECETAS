<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Botones">
        <item name="android:background">@drawable/esquinas_redondeadas</item>
        <item name="android:elevation">@dimen/elevacion_boton</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="Boton_P">
        <item name="android:background">@drawable/esquinas_redondeadas</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/letra_nueva_receta</item>
        <item name="android:elevation">@dimen/elevacion_b_principal</item>
        <item name="android:textColor">@color/primaryText</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
