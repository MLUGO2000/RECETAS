<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lugo.manueln.recetas">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lugo.manueln.recetas.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lugo.manueln.recetas.info" />
        <activity android:name="com.lugo.manueln.recetas.actividad_recetas" />
        <activity
            android:name="com.lugo.manueln.recetas.registro_recetas"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.lugo.manueln.recetas.receta_seleccionadaActivity" />
        <activity
            android:name="com.lugo.manueln.recetas.edita_receta"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>